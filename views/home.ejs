
<%- include("partials/header"); -%>

<div class="main" id="prlx">
    <div class="main-para">
      <p> <%= startingContent %> </p>
      <div class="btn-wrap"><a class="btn-custom" href="/compose">Start Writing!</a></div>
    </div>
</div>

<div class="multi-container">
  <div class="heading">
    <h1>Recent Posts</h1>
  </div>
  
  <div class="posts">
  <%  posts.forEach(function(post){ %>
    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>
  <% }) %>
  </div>
</div>
 
<%- include("partials/footer"); -%>
